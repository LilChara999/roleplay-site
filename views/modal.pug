<!doctype html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    script(src='https://cdn.jsdelivr.net/npm/vue/dist/vue.js')
    link(type="text/css" rel="stylesheet" href="/stylesheets/modal_window.css")

  body
    script(type="text/x-template" id="modal-template")
      transition(name="modal")
        div(class="modal-mask")
          div(class="modal-wrapper")
            div(class="modal-container")

              div(class="modal-header")
                slot(name="header")
                  p Вход на сайт

              div(class="modal-body")
                slot(name="body")
                form(action="/log_in" method="post")
                  br
                  br
                  label(for="login") Логин
                  input(type="text" name="login_field" id="login")
                  br
                  br
                  label(for="password") Пароль
                  input(type="password" name="password_field" id="password")
                  br
                  br
                  input(type="submit" value="Войти")

              div(class="modal-footer")
                slot(name="footer")
                a(href="/register") Зарегистрироваться
                br
                br
                a(href="/forget_password") Забыли пароль?
                input(type="button" value="Закрыть" class="modal-default-button" v-on:click="$emit('close')")


    div(id="app")
      input(type="button" id="show-modal" value="Show modal" "v-on:click"="showModal=true")
      modal("v-if"="showModal" "v-on:close"="showModal=false")

    script(src='/javascripts/modal.js')
